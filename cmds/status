#!/bin/bash

__run__() {
    gb -is-in-repo || return 1

    printf "On: "
    if gb -is-detached-head ; then
        startColor RED
        echo "(HEAD detached at $(gb -resolve HEAD))"
        endColor
    else
        startColor BLUE
        git status | grep "On branch" | sed 's/On branch //'
        endColor
    fi


    local untrackeds="$(git status -s | grep '^??' | sed 's/^?? */   /')"
    if ! [ -z "$untrackeds" ] ; then
        echo "Untracked"
        startColor RED
        echo "$untrackeds"
        endColor
    fi


    local mods="$(git status -s | grep '^ ' | sed 's/^ */   /')"
    if ! [ -z "$mods" ] ; then
        echo "Modified:-"
        startColor RED
        echo "$mods"
        endColor
    fi

    local stags="$(git status -s | grep '^[^ ?]' | sed 's/^/   /')"
    if ! [ -z "$stags" ] ; then
        echo "Staged $(color GREY "To be commited"):-"
        startColor GREEN
        echo "$stags"
        endColor
    else
        echo $(color YELLOW "No staged changes to be commited")
    fi
}
