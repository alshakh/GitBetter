#!/bin/bash

__run__() {
    gb -is-in-repo || return 1

    echo -e "On branch: \e[34m$(gb -get-current-branch)\e[39m"
    
    echo "Untracked"
    printf "\e[91m"
    gb -get-untracked | sed 's/^/   /'
    printf "\e[39m"
    
    echo "Modified"
    printf "\e[91m"
    gb -get-modified | sed 's/^/   /'
    printf "\e[39m"
    
    echo "Staged to be commited"
    printf "\e[32m"
    gb -get-staged | sed 's/^/   /'
    printf "\e[39m"
}
