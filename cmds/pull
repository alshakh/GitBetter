
__run__() {
    gb -is-in-repo || return 1

    git pull "$@"
}

__complete__() {
    local cur=$(sed 's/^\^//' <<< "${!#}")
    if (( $# == 1 )) ; then
        compgen -W "$(gb -list-remotes)" -- "$cur"
    elif (( $# > 1 )) ; then
        local ps=$(gb -list-refs --only-remotes | sed "s@$1/@@")
        compgen -W "$ps" -- "$cur"
    fi
}

__usage__() {
    return 0
}
