
__run__() {
    gb -is-in-repo || return 1

    git fetch "$@"
}

__complete__() {
    if (( $# == 0 )) ; then
        compgen -W "$(gb -list-remotes)" -- "$CURRENT_TERM"
    elif (( $# > 0 )) ; then
        local ps=$(gb -list-refs --only-remotes | sed "s@$1/@@" | while read p ; do echo $p:$p ; done)
        compgen -W "$ps" -- "$cur"
    fi
}

__usage__() {
    return 0
}
