

__run__() {

    gb -is-in-repo || return 1

    # TODO : control output

    if [[ "$#" == 0 ]] ; then
        git add -A
    else
        git add -- "$@"
    fi
}

__complete__() {
    gb -is-in-repo || return 0

    local posss="$(git status -s | sed -e '/^[^ ?]/d' -e 's/^?? *//' -e 's/^ [A-Z] *//')"
    compgen -W "$posss" -- $CURRENT_TERM
    return 0
}
