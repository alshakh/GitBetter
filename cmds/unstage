
__run__() {
    gb -is-in-repo || exit 1
    
    # default with no argument
    [[ -z "$@" ]] && {
        git reset
        return $?
    }
    
    # called with arguments
    local files=$(readlink -f -- $@)
    
    git reset -- $files
    return $?
}

__complete__() {
    local rt=$(gb -get-root)
    for q in $(gb -get-staged --names-only | sed "s@^@${rt}/@")
    do
        echo $(realpath "$q" --relative-to="$(pwd)")
    done

    return 0
}

__help__() {
    return 0
}

