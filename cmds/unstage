
__run__() {
    gb -is-in-repo || exit 1

    # default with no argument
    [[ -z "$@" ]] && {
        git reset
        return $?
    }

    # called with arguments
    local files=$(readlink -f -- $@)

    git reset -- $files
    return $?
}

__complete__() {
    git status -s | grep '^[^ ?]' | sed 's/^[A-Z]\+[[:blank:]]\+//'
    return $?
}

__usage__() {
    return 0
}
